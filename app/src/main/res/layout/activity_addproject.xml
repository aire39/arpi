<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:theme="@style/AppTheme.NoActionBar">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#5492EF"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/app_bar_main_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEEE"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:gravity="start"
                    android:background="@android:color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:text="@string/label_name"/>

                <EditText
                    android:id="@+id/addproject_et_projectname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="64dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:lines="1"
                    android:inputType="text"
                    android:hint="@string/label_project_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:gravity="start"
                    android:background="@android:color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:text="@string/label_hardware"/>

                <TextView
                    android:id="@+id/addproject_tv_hardware_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_cpu"
                    android:drawableStart="@mipmap/ic_cpu"
                    android:text="@string/app_name"
                    android:textSize="32sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="40dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:gravity="start"
                    android:background="@android:color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:text="@string/label_notes"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:textSize="20sp"
                    android:gravity="top|start"
                    android:layout_marginTop="4dp"
                    android:paddingStart="64dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:background="@null"
                    android:hint="@string/label_lorem_ipsum"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addproject_btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFB6D7A8"
                    android:text="@string/label_next"
                    android:textColor="@android:color/black"
                    style="?android:attr/buttonBarButtonStyle"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>