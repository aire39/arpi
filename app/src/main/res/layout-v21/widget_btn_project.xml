<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginBottom="4dp"
    android:id="@+id/widget_project"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/widget_project_ll_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#9cc0f0"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_project_img_hardware"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@mipmap/ic_cpu"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"

                android:layout_gravity="center_vertical"
                android:contentDescription="@string/label_hardware" />

            <TextView
                android:id="@+id/widget_project_tv_projectname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_project_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:text="@string/label_last_modified"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/widget_project_tv_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="end"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:text="@string/label_last_modified"
                android:layout_weight="0.5"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/widget_project_ll_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ac0c1023"
        android:animateLayoutChanges="true"
        android:gravity="end"
        android:clickable="true"
        android:orientation="horizontal">
        <!-- background: #ac3f51b5 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1">
            <ImageView
                android:id="@+id/widget_project_btn_hidden"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_hidden"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical|start"
                android:contentDescription="@string/label_hardware"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/widget_project_btn_delete"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:src="@mipmap/ic_delete"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical|end"
            android:contentDescription="@string/label_hardware"
            android:layout_weight="47.5"/>

        <ImageView
            android:id="@+id/widget_project_btn_edit"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:src="@mipmap/ic_settings"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical|end"
            android:contentDescription="@string/label_hardware"
            android:layout_weight="47.5"/>


    </LinearLayout>

</RelativeLayout>